<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="481" Width="824">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="Emission" Header="Emission" Background="#FFDDDDDD" BorderBrush="Black" Grid.Row="1" RenderTransformOrigin="0.499,0.517" Grid.Column="1">
            <TextBox x:Name="textBoxEmission" TextWrapping="Wrap" BorderThickness="0,0,0,0" AcceptsReturn="True" KeyUp="textBoxEmission_KeyUp"/>
        </GroupBox>
        <GroupBox x:Name="Reception" Header="Reception" Background="{Binding Background, ElementName=Emission}" BorderBrush="Black" Grid.Column="3" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <GroupBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.228"/>
                    <TranslateTransform/>
                </TransformGroup>
            </GroupBox.RenderTransform>
            <TextBox x:Name="textBoxReception" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" BorderThickness="0,0,0,0"/>
        </GroupBox>
        <Button x:Name="buttonEnvoyer" Grid.Column="1" Content="Envoyer" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" RenderTransformOrigin="-0.917,-1.86" HorizontalContentAlignment="Center" MinWidth="100" MaxWidth="100" Click="buttonEnvoyer_Click"/>
        <Button x:Name="buttonEnvoyer_Copy" Grid.Column="1" Content="Envoyer" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" RenderTransformOrigin="-0.917,-1.86" HorizontalContentAlignment="Center" MinWidth="100" MaxWidth="100" Click="buttonEnvoyer_Click"/>
        <Button Grid.Column="3" Content="Clear" HorizontalAlignment="Center" Margin="0,3,0,0" Grid.Row="3" VerticalAlignment="Top" Height="22" Width="80" Click="Button_Click"/>

    </Grid>
</Window>
